<div data-turbo="false">
  <div class="py-6 sm:py-8 lg:py-12" style="background-color: #f9fcff;">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8"><%= (t '.title') %></h2>

      <div class="max-w-lg border rounded-lg mx-auto">
        <div class="flex flex-col border-t-4 border-indigo-600">

          <%= form_with model: @user, url: password_reset_path(@token), local: true do |f| %>
            <div class="text-red-600 px-3 py-3">
              <%= error_messages_for(@user) %>
            </div>
            <div class="flex flex-col gap-4 p-4 md:p-8">
              <div>
                <%= f.password_field :password, placeholder: (t '.new_password'), class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 my-2", required: true %>
              </div>
              <div>
                <%= f.password_field :password_confirmation, placeholder: (t '.new_password_confirmation'), class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 my-6", required: true %>
              </div>
              <div class="flex justify-center">
                <%= f.submit (t 'defaults.save'), class: "block bg-blue-700 hover:bg-blue-900 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 mb-5" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
