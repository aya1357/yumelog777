<section class="m-auto w-5/12">
  <div class="simple-calendar ">
    <%= link_to new_habit_path do %>
      <button type="button" class="text-white bg-gradient-to-r from-cyan-500 to-blue-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800 rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-6 font-mono font-extrabold">習慣を追加する</button>
    <% end %>
    <%= turbo_frame_tag 'calendar' do %>
      <%= month_calendar do |date| %>
        <%= date.day %>
      <% end %>
    <% end %>
  </div>

  <section>
    <div class="mt-4 text-2xl flex justify-between font-bold">
      <ul class="space-x-7">
        <li class="float-left text-gray-700">12月1日木曜日の習慣</li>
        <li class="float-left text-blue-500">未完了</li>
      </ul>
      <h2 class="text-gray-700">勉強時間0分</h2>
    </div>
    <div>
      <div class="p-3 mt-4 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
          <a href="#">
              <h5 class="mb-2 text-xl font-semibold tracking-tight text-gray-600 dark:text-white">本の名前</h5>
          </a>
          <div class="flex justify-between">
            <p class="mb-3 font-normal text-gray-500 dark:text-gray-400">目標 : 10ページ</p>
            <a href="#" class="inline-flex items-center text-blue-600 hover:underline">
                勉強記録
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
            </a>
          </div>
      </div>
    </div>
  </section>

  <section>
    <div class="bg-white mt-12">
      <nav class="flex flex-col sm:flex-row">
          <button class="text-gray-700 px-6 block hover:text-blue-500 focus:outline-none  border-b-2 font-extrabold text-2xl border-blue-500">
              進行中
          </button>
          <button class="text-gray-600 px-6 block hover:text-blue-500 focus:outline-none">
              完了済
          </button>
      </nav>
    </div>

    <div class="p-3 my-4 bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
      <div class="flex justify-between">
        <a href="#">
            <h5 class="mb-2 text-xl font-semibold tracking-tight text-gray-600 dark:text-white">本の名前</h5>
        </a>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
        </svg>
      </div>
      <div class="flex justify-between mb-3 font-normal text-gray-600 dark:text-gray-400 text-sm">
        <div>開始日 : 2023年1月1日</div>
        <div>残り目標日数 : あと30日</div>
        <div>残りページ : 30ページ</div>
      </div>
      <p class="font-normal text-gray-600 dark:text-gray-400">URL : https//</p>
      <a href="#" class="inline-flex items-center font-normal text-gray-600 dark:text-gray-400 hover:underline">
          勉強メモ
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
