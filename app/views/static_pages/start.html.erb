<% content_for(:title, t('.title')) %>

<div class="bg-white py-6 sm:py-8 lg:py-12 mb-6">
  <div class="">
    <h2 class="text-gray-800 md:text-2xl lg:text-xl font-bold text-center mb-4 md:mb-3">勉強する本のページ数を入力</h2>
    <p class="text-gray-800 md:text-2xl lg:text-xl font-bold text-center mb-4 md:mb-8 underline">終了予定日は、<span id="end_date"></span>です</p>
    <div class="mx-3">
      <form>
        <div class="max-w-lg border rounded-lg mx-auto">
          <div class="flex flex-col border-t-4 border-indigo-600">
            <div class="flex p-4 mt-6">
              <div class="flex md:text-xl md:font-bold">
                <span class="block pt-3 float-left">本の総ページ数&emsp;</span>
                <input type="number" id="input_total_pages" class="mr-3 float-left bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 py-3 px-8" name="study_number" placeholder="例)30" required="required" min="0" max="5000" required>
                <span class="block pt-3">ページ</span>
              </div>
            </div>
            <div class="flex flex-col p-4 md:text-xl md:font-bold">
              <div class="">
                <span class="block pt-3 float-left">1日の目標ページ数&emsp;</span>
                <input type="number" id="input_target_pages" class="mr-3 float-left bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 py-3 px-8" name="study_number" placeholder="例)2" required="required" min="0" max="5000" required>
                <span class="block pt-3">ページ</span>
              </div>
            </div>
          </div>
          <div class="text-center">
            <button type="submit" class="py-3 px-8 mb-6 bg-red-500 text-white font-bold mt-6 rounded-lg hover:bg-red-700" id="start_culc_btn">
              計算
            </button>
          </div>
        <div class="mt-8 mb-6 flex flex-wrap text-center">
          <%= link_to '始めてみる', new_user_path, class: "md:m-auto font-bold mx-10 block w-full rounded bg-blue-700 px-12 py-3 text-sm font-medium text-white shadow hover:bg-blue-900 focus:outline-none focus:ring active:bg-blue-500 sm:w-auto float-left", style: "font-family: 'Gen Jyuu Gothic XP', sans-serif;" %>
          <%= link_to 'ログイン', login_path, class:  "md:m-auto font-bold mx-10 block w-full rounded bg-white px-12 py-3 text-sm font-medium text-blue-700 shadow hover:text-blue-700 focus:outline-none focus:ring active:text-blue-500 sm:w-auto hover:bg-gray-100", style: "font-family: 'Gen Jyuu Gothic XP', sans-serif;" %>
        </div>
        </div>
      </form>
    </div>
  </div>
</div>
