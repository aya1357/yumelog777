<div data-turbo="false">
  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
      <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8"><%= t '.title' %></h2>

      <div class="max-w-lg border rounded-lg mx-auto">
        <div class="flex flex-col border-t-4 border-indigo-600">

          <%= form_with model: @user, url: profile_path, local: true do |f| %>
            <% if @user.role != 'guest' %>
              <div class="flex flex-col gap-4 p-4 md:p-8">
                <div>
                  <%= f.text_field :name, placeholder: current_user.name, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 my-2" %>
                </div>
                <div>
                  <%= f.email_field :email, placeholder: current_user.email, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 my-6" %>
                </div>
                <div class="flex justify-center">
                  <%= f.submit (t 'defaults.update'), class: "block bg-indigo-600 hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 mt-10 mb-5" %>
                </div>
              </div>
            <% end %>
          <% end %>
          <div class="flex justify-center items-center bg-gray-100 p-4">
            <p class="text-gray-500 text-sm text-center">パスワードの再設定は<%= link_to "こちら", new_password_reset_path, class: "text-indigo-500 hover:text-indigo-600 active:text-indigo-700 transition duration-100" %></p>
          </div>
      </div>
    </div>
  </div>
</div>
