<% content_for(:title, @log_date_display) %>
<% StudiesHelper %>

<div style="background-color: #f9fcff;">
  <h1 class="text-center font-bold sm:text-3xl pt-10 text-gray-700 text-xl"><%= l @date_display, format: :long %>&ensp;<%= t('.title') %></h1>
  <div class="py-6 sm:py-8 lg:py-12">
      <div class="max-w-screen-xl md:px-8 mx-auto">
        <div class="grid md:grid-cols-2 gap-4 md:px-20 px-6">
          <!-- quote - start -->
          <div>
            <div class="flex flex-col bg-blue-50 rounded-lg gap-4 md:gap-3 md:px-8 px-5 py-7 drop-shadow-lg">
              <%= form_with model: @form, url: log_path, local: true do |f| %>
                <%= f.hidden_field :log_date, :value => params[:date].to_date %>
                <div class="flex justify-between">
                  <div class="flex max-w-md text-gray-700 lg:text-lg">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 float-left mt-1">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                    </svg>
                    <div class="ml-1 font-bold text-2xl">完了分</div>
                  </div>
                </div>
                <div class="flex-wrap">
                  <%= f.fields_for :logs do |f| %>
                    <% study = Study.find(f.object.study_id) %>
                    <% if !study.status && study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                      <%= f.hidden_field :user_id, :value => current_user.id %>
                      <%= f.hidden_field :study_id, :value => study.id %>
                      <%= f.hidden_field :log_date, :value => (params["date"]).to_date %>
                      <div class="font-bold md:text-xl text-indigo-900 mt-6"><%= study.title.truncate(22) %></div>
                      <div class="justify-between flex mt-2">
                        <div class="flex">
                          <%= f.number_field :study_number, in: 0..5000, placeholder: "例) 5", id: ("input_#{study.id}"), class: "mr-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 py-3 px-6", required: true %>
                          <span class="pt-3">ページ</span>
                          <%= link_to "" do %>
                            <div class="hover:underline ml-8" id="calc_btn_<%= study.id %>">
                              <%= image_tag "logo_cul.png", alt: "計算アイコン", class: "w-6" %>
                              <span class="text-sm font-bold">計算</span>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                  <div class="form_not_read">
                    <div class="form_not_read_index_title cursor-pointer font-bold hover:underline mt-8 mb-4">
                      <div class="form_not_read_close float-left">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5" />
                        </svg>
                      </div>
                      <div class="form_not_read_open float-left">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l7.5-7.5 7.5 7.5m-15 6l7.5-7.5 7.5 7.5" />
                        </svg>
                      </div>
                      <div>
                        読書予定ではない本の一覧
                      </div>
                    </div>
                    <div class="form_not_read_titles">
                      <%= f.fields_for :logs do |f| %>
                        <% study = Study.find(f.object.study_id) %>
                        <% if !study.status && !study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                          <%= f.hidden_field :user_id, :value => current_user.id %>
                          <%= f.hidden_field :study_id, :value => study.id %>
                          <%= f.hidden_field :log_date, :value => (params["date"]).to_date %>
                          <div class="font-bold md:text-xl text-indigo-900 mt-4"><%= study.title.truncate(22) %></div>
                          <div class="justify-between flex mt-2">
                            <div class="flex">
                              <%= f.number_field :study_number, in: 0..5000, placeholder: "例) 5", id: ("input_#{study.id}"), class: "mr-3 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 py-3 px-6", required: true %>
                              <span class="pt-3">ページ</span>
                              <%= link_to "" do %>
                                <div class="hover:underline ml-8" id="calc_btn_<%= study.id %>">
                                  <%= image_tag "logo_cul.png", alt: "計算アイコン", class: "w-6" %>
                                  <span class="text-sm font-bold">計算</span>
                                </div>
                              <% end %>
                            </div>
                          </div>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
                <div class="text-center">
                  <%= f.submit (t 'defaults.update'), class: "py-3 px-8 bg-blue-700 text-white font-bold mt-6 rounded-lg hover:bg-blue-900" %>
                </div>
              <% end %>
            </div>
          </div>
          <!-- quote - end -->
          <!-- quote - start -->
          <div class="flex flex-col bg-gray-50 rounded-lg gap-4 md:gap-6 md:px-8 px-5 py-6 drop-shadow-lg">
            <div class="flex max-w-md text-gray-700 lg:text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mt-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
              </svg>
              <div class="ml-1 font-bold text-2xl">完了予定日</div>
            </div>
            <div class="flex-wrap">
                <% @studies.each do |study| %>
                  <% if !study.status && study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                    <div class="mb-9">
                      <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                      <div class="text-left">
                        <p>目標終了予定日: <span><%= l target_end_date(study), format: :long %></span></p>
                        <p>自動計算終了日: <span id = "culcEndDay_<%= study.id %>"><%= l automatic_calculation_end_day(study), format: :long %></span></p>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <div class="form_not_read">
                <div class="form_not_read_index_title cursor-pointer font-bold hover:underline mt-3 mb-4">
                  <div class="form_not_read_close float-left">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5" />
                    </svg>
                  </div>
                  <div class="form_not_read_open float-left">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l7.5-7.5 7.5 7.5m-15 6l7.5-7.5 7.5 7.5" />
                    </svg>
                  </div>
                  <div>
                    読書予定ではない本の一覧
                  </div>
                </div>
                <div class="form_not_read_titles">
                  <% @studies.each do |study| %>
                    <% if !study.status && !study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                      <div class="mb-4">
                        <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                        <div class="text-left">
                          <p>目標終了予定日: <span><%= l target_end_date(study), format: :long %></span></p>
                          <p>自動計算終了日: <span id = "culcEndDay_<%= study.id %>"><%= l automatic_calculation_end_day(study), format: :long %></span></p>
                        </div>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- quote - end -->
          <!-- quote - start -->
          <div class="flex flex-col bg-gray-50 rounded-lg gap-4 md:gap-6 md:px-8 px-5 py-6 drop-shadow-lg">
            <div class="flex max-w-md text-gray-700 lg:text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mt-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
              </svg>
              <div class="ml-1 font-bold text-2xl">残り</div>
            </div>
            <div class="flex-wrap mb-4">
              <% @studies.each do |study| %>
                <% if study.status == false && study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                  <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                  <div class="flex mb-9 justify-between">
                    <div class="flex">
                      <div class="block">残り<span class="text-3xl mx-3 font-bold underline" id="remainPages_<%= study.id %>"><%= remain_pages(study) %></span>ページ</div>
                      <% if remain_pages(study)== 0 %>
                        <div class="ml-3">
                          <%= image_tag "log_completed_logo.svg", alt: "計算アイコン", class: "w-10" %>
                        </div>
                      <% end %>
                    </div>
                    <% if remain_pages(study) == 0 %>
                      <div class="flex">
                        <%= link_to "完了済", studies_status_done_path(id: study.id), class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
              <div class="form_not_read">
                <div class="form_not_read_index_title cursor-pointer font-bold hover:underline mt-3 mb-4">
                  <div class="form_not_read_close float-left">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5" />
                    </svg>
                  </div>
                  <div class="form_not_read_open float-left">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l7.5-7.5 7.5 7.5m-15 6l7.5-7.5 7.5 7.5" />
                    </svg>
                  </div>
                  <div>
                    読書予定ではない本の一覧
                  </div>
                </div>
                <div class="form_not_read_titles space-y-4">
                  <% @studies.each do |study| %>
                    <% if study.status == false && !study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                      <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                      <div class="flex mb-9 justify-between">
                        <div class="flex">
                          <div class="block">残り<span class="text-3xl mx-3 font-bold underline" id="remainPages_<%= study.id %>"><%= remain_pages(study) %></span>ページ</div>
                          <% if remain_pages(study)== 0 %>
                            <div class="ml-3">
                              <%= image_tag "log_completed_logo.svg", alt: "計算アイコン", class: "w-10" %>
                            </div>
                          <% end %>
                        </div>
                        <% if remain_pages(study) == 0 %>
                          <div class="flex">
                            <%= link_to "完了済", studies_status_done_path(id: study.id), class:"bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <!-- quote - end -->
          <!-- quote - start -->
          <div class="flex flex-col bg-gray-50 rounded-lg gap-4 md:gap-6 md:px-8 px-5 py-6 drop-shadow-lg">
            <div class="flex max-w-md text-gray-700 lg:text-lg">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mt-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div class="ml-1 font-bold text-2xl">目標</div>
            </div>
              <div class="flex-wrap mb-4">
                <% @studies.each do |study| %>
                  <% if !study.status && study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                    <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                    <div class="flex text-left  mb-9">
                      <div class="block">1日<span class="text-3xl mx-3 font-bold underline"><%= study.target_number %></span>ページ</div>
                    </div>
                  <% end %>
                <% end %>
                <div class="form_not_read">
                  <div class="form_not_read_index_title cursor-pointer font-bold hover:underline mt-3 mb-4">
                    <div class="form_not_read_close float-left">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 5.25l-7.5 7.5-7.5-7.5m15 6l-7.5 7.5-7.5-7.5" />
                      </svg>
                    </div>
                    <div class="form_not_read_open float-left">
                      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l7.5-7.5 7.5 7.5m-15 6l7.5-7.5 7.5 7.5" />
                      </svg>
                    </div>
                    <div>
                      読書予定ではない本の一覧
                    </div>
                  </div>
                  <div class="form_not_read_titles space-y-4">
                    <% @studies.each do |study| %>
                      <% if !study.status && !study.day_of_week.split(",").map{|n| n.to_i}.include?(@date.wday.to_i) %>
                        <p class="font-bold md:text-xl text-indigo-900 mb-2"><%= study.title.truncate(22) %></p>
                        <div class="flex text-left  mb-9">
                          <div class="block">1日<span class="text-3xl mx-3 font-bold underline"><%= study.target_number %></span>ページ</div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
          </div>
          <!-- quote - end -->
        </div>
        <p class="mt-10">*目標終了日は、最初に登録した総勉強ページ数と1日の目標ページ数、取り組む曜日を加味して設定されています。</p>
        <p class="mt-3">*自動計算終了日は、実際に勉強したページ数を加味して、勉強したページ数が想定よりも多ければ終わる予定の日付を早く、少なければ予定よりも長く日付を設定しています。</p>
      </div>
  </div>
</div>
