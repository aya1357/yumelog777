        <div class="hover:underline">
          <%= image_tag "header_plofile.png", alt: "プロフィールアイコン", class: "w-6 m-auto" %>
          <span class="font-extrabold" style="font-size: 4px">アカウント</span>
        </div>
      <% end %>
    </div>
    <div class="">
      <%= link_to logout_path, data: { turbo_method: :delete } do %>
        <div class="hover:underline mr-3">
          <%= image_tag "header_logout.png", alt: "ログアウトアイコン", class: "w-6 m-auto" %>
          <span class="font-extrabold" style="font-size: 4px">ログアウト</span>
        </div>
      <% end %>
