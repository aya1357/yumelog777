    <%= link_to root_path do %>
      <%= image_tag "header_logo1.png", alt: "タイトルアイコン", class: "float-left w-8 pt-1" %>
      <h1 class="flex m-auto text-2xl pt-1" style="font-family: 'Gen Jyuu Gothic XP', sans-serif;" >&nbsp;積みログ&ensp;|&ensp;積読本解消アプリ</h1>
    <% end %>
  </div>
  <div class="flex-none space-x-4 mt-5">
    <div class="">
      <%= link_to calendars_path do %>
        <div class="hover:underline">
          <%= image_tag "header_calendar.png", alt: "カレンダーアイコン", class: "w-6 m-auto" %>
          <span class="font-extrabold" style="font-size: 2px">カレンダー</span>
        </div>
