<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
    <h2 class="text-gray-800 text-2xl lg:text-3xl font-bold text-center mb-4 md:mb-8">ログイン</h2>

    <form class="max-w-lg border rounded-lg mx-auto">
      <div class="flex flex-col border-t-4 border-indigo-600">
        <div class="flex flex-row-reverse">
        <%= link_to new_user_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 bg-indigo-600 text-white">
  <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12h15m0 0l-6.75-6.75M19.5 12l-6.75 6.75" />
</svg>
        <% end %>

          <h2 class="text-gray-800 text-right pr-2 text-sm">To signup</h2>
        </div>
        <%= form_with url: login_path, local: true do |f| %>
          <div class="flex flex-col gap-4 p-4 md:p-8">
            <div>
              <%= f.email_field :email, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2 my-6", placeholder: "メールアドレス" %>
            </div>
            <div>
              <%= f.password_field :password, class: "w-full bg-gray-50 text-gray-800 border focus:ring ring-indigo-300 rounded outline-none transition duration-100 px-3 py-2", placeholder: "パスワード" %>
            </div>
            <button class="block bg-indigo-600 hover:bg-gray-700 active:bg-gray-600 focus-visible:ring ring-gray-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3 mt-16 mb-5">ログイン</button>
          </div>
        <% end %>
        <div class="flex justify-center items-center bg-gray-100 p-4">
          <p class="text-gray-500 text-sm text-center">パスワードをお忘れの方は<a href="#" class="text-indigo-500 hover:text-indigo-600 active:text-indigo-700 transition duration-100">こちら</a></p>
        </div>
    </form>
  </div>
</div>
